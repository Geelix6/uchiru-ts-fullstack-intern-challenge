{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../src",
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["../test"],
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "moduleDirectories": ["node_modules", "src"]
}
